

<div class="keyword">
<%= new_or_existing = keyword.new_record? ? 'new' : 'existing' %>
<%= prefix = "category[#{new_or_existing}_keyword_attributes][]" %>
<%= fields_for prefix, keyword do |keyword_form| -%>
<p>
    <label class="label-modal">keyword:</label>
<%= keyword_form.text_field :description %>
 <%= keyword_form.hidden_field :category_id %>
 <td><%= link_to "Delete", [keyword.category, keyword], method: :delete, data: { confirm: "Do you want to delete this Keyword?"}, class: 'btn btn-primary'  %></td>
</p>
<% end %>
</div>
