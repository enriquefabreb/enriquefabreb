<div class="modal-header">

  <h4 class="label-modal" id="myModalLabel">Update Category</h4>
    <button type="button" class="close" data-dismiss="modal">x</button>

</div>
<%= form_for @category do |f| %>
  <% if @category.errors.any?  %>
  <h3> Errors:</h3>
  <ul>
    <% @category.errors.full_messages.each do |message|  %>
      <li> <%= message %></li>
    <% end %>
  </ul>
  <% end %>
  <div class="modal-body">
    <div class="form-group">
      <%= f.label :name, class:"label-modal" %>
      <%= f.text_field :name, class: "form-control input-lg", placeholder: "Nombre"  %>
    </div>
    <div class="form-group">
        <%= render @category.keywords %>
    </div>

    <%= link_to "Add KeyWord", add_path, remote: true %>
    <div id="keyword_id"></div>
    <div class="content" ">
</div>

  <div class="modal-footer">
    <%= f.submit class: "btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>
