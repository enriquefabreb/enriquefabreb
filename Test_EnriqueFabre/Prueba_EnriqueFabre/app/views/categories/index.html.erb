<div class="container">
<h1>Categories List</h1>
  <table  class="table table-bordered" style="color: white; >
 <thead class="">
  <div class="row">
    <div >
          <th>Name </th>
    </div>
  </div>
   </thead>
    <% @categories.each do |category| %>
    <div class="row">
        <div >
  <tr>
    <td > <%= category.name %></td>
    <td class=".col-sm"> <%= link_to "Edit", edit_category_path(category), remote: true, data: { target: '#myModal', toggle: 'modal' }, class: 'btn btn-primary'  %>
<%= link_to "Delete", category, method: :delete, data: { confirm: "Do you want to delete this category?"} , class: 'btn btn-primary'%></td>
  </tr>
</div>
</div>

  <% end  %>
  <div class="row">
      <div >
  <tr>

     <%= link_to 'NEW', new_release_path , remote: true, data: { target: '#myModal', toggle: 'modal' }, class: 'btn btn-primary'%>
  </tr>
</div>
</div>
</table>

<div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" ">
  <div class="modal-dialog" role="document" ">
    <div class="modal-content" ">

    </div>
  </div>
</div>


</div>
